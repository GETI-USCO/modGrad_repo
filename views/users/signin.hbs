<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-5 text-center border-secondary">
            <div class="card-header bg-dark">
                <h1 class="h4 text-white">Bienvenido a ModGrad</h1>
            </div>
            
            <div class="card-body">
                <img class="rounded-circle mx-auto d-block logo mt-0 mb-2" src="../img/logoModGrad.png" width="90" height="90"
                alt="Logo">
                <form action="/users/signin" method="POST">
                    <div class="form-group text-left">
                        <input type="email" class="form-control bg-light" name="email" placeholder="Correo electrónico" >
                    </div>
                    <div class="form-group text-left">
                        <input type="password" class="form-control bg-light" name="password" placeholder="Contraseña">
                    </div>
                    <button class="btn btn-secondary btn-block">
                        Iniciar sesión
                    </button>                     
                    <div class="mt-3"><a href="/users/forgetPasswd">Olvidé mi contraseña</a></div>
                </form>
            </div>
        </div>
    </div>
</div>