<div> 
  <hr>
  <h2> <p class="font-italic inline">ModGrad - Usuarios</p></h2>  
  <hr>
</div>
<table class="table table-bordered table-hover overflow-y: hidden">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombres</th>
      <th scope="col">Primer apellido</th>
      <th scope="col">Segundo apellido</th>
      <th scope="col">Id</th>
      <th scope="col">Correo electr√≥nico</th>
      <th scope="col">Tipo</th>
      <th scope="col">Modalidad</th>
      <th scope="col">Editar</th>
      <th scope="col">Eliminar</th>  
    </tr>
  </thead>
  <tbody>   
    {{#each userList}} 
    <tr>
      <th scope="row">{{@index }}</th>
      <td>{{name}}</td>
      <td>{{lastname}}</td>
      <td>{{sec_lastname}}</td>
      <td>{{identification}}</td>
      <td>{{email}}</td>
      <td>{{role}}</td>
      <td>
        <form action="/users/updateUser/{{_id}}" method="POST">
          <button type="=submit" class="btn btn-info btn-block btn-sm">Buscar</button>
        </form> 
      </td>
      <td>        
        <a href="/users/editUserForm/{{_id}}"><button class="btn btn-success btn-block btn-sm">Editar</button></a>        
      </td>      
      <td>            
      <form action="/users/deleteUser/{{_id}}?_method=DELETE" method="POST">
        <input type="hidden" name="_method" value="DELETE">
           <button type="=submit" class="btn btn-danger btn-block btn-sm">Borrar</button>
        </form>       
      </td> 
    </tr>
     {{/each}}     
  </tbody>
</table>